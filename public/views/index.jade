doctype html
html(ng-app='CUP')
	head
		title CUP
		link(rel='stylesheet' href='/stylesheets/style.css')
		link(rel='stylesheet' href='/textAngular/dist/textAngular.css')
		link(rel='stylesheet' href='/font-awesome/css/font-awesome.min.css')
		script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js')
		script(type='text/javascript' src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-route.js')
		script(type='text/javascript' src='/textAngular/dist/textAngular-rangy.min.js')
		script(type='text/javascript' src='/textAngular/dist/textAngular-sanitize.min.js')
		script(type='text/javascript' src='/textAngular/dist/textAngular.min.js')
		script(type='text/javascript' src='/javascripts/main.js')
		script(type='text/javascript' src='/javascripts/controllers.js')
		script(type='text/javascript' src='/javascripts/services.js')

	body
		div(ng-controller='topBarController')
			div(ng-hide='isLogged')
				form
					input(type='text' ng-model='user.uid' placeholder='User ID')
					input(type='password' ng-model='user.pwd' placeholder='Password')
					button(type='submit' ng-click='login()') Login
					button(ng-click='register()') Register
					span {{message}}

			div(ng-show='isLogged')
				p Logged as {{uid}}.
					button(ng-click='logout()') Logout
				table
					tr
						td
							a(ng-href='#/') Home 
						td
							a(ng-href='#/dept') Departments 
						td
							a(ng-href='#/discussion/GENERAL') Discussion 
						td
							a(ng-href='#/barter') Barter 

			div(id='main')
				div(ng-view)